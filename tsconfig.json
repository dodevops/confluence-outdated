{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmitOnError": true,
    "target": "es6",
    "declaration": false
  },
  "include": ["index.ts", "test/**/*.ts", "lib/**/*.ts"],
  "exclude": ["index.d.ts", "test/**/*.d.ts", "lib/**/*.d.ts", "node_modules"]
}
